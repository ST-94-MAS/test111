    const myLisRulePublic2Https1c = new elbv2.ApplicationListenerRule(this, "LisRulePublic2Https1c",{
      listener:  AlbLisPublic2Https,
      priority: 10,
      conditions: [elbv2.ListenerCondition.hostHeaders([`***.${props.systemPrefix}-${props.envPrefix}digital.co.jp`])],  // ホストヘッダーの条件指定
      action: elbv2.ListenerAction.forward([AlbTgPsapps]) //  Smp-Dev-TG-Psrespに転送
