    const myLisRulePublic3Https1c = new elbv2.ApplicationListenerRule(this, "LisRulePublic3Https1c",{
      listener:  AlbLisPublic3Https,
      priority: 10,
      conditions: [elbv2.ListenerCondition.hostHeaders([`***.${props.systemPrefix}-${props.envPrefix}digital.co.jp`])],  // ホストヘッダーの条件指定
      action: elbv2.ListenerAction.forward([AlbTgPsresp]) // Smp-Dev-TG-Psfarに転送
