	■ 2.3 fstab						
			UUID=eb7fc8df-03d1-4dfe-9774-5977160ae79b / xfs defaults 1 1				
			UUID=4f7ad010-da76-41ca-9eed-c356ed3fe04a swap swap defaults 0 0				
			UUID=05c3d600-14ae-42cf-b6b2-9237a6d6130a /var/dumpsavearea xfs ro 0 2				
			UUID=99ddc25f-114d-4540-a961-c78c56900aa6 /extsdd1 xfs defaults 1 2				
			shmfs                                    /dev/shm  tmpfs defaults,size=4096M 0 0	 /dev/shm  tmpfs defaults,size=4096M 0 0			
			esapsvm811.mew.co.jp:/save_kmdb12 /backup nfs noauto,rw,hard,intr 0 0				
							
